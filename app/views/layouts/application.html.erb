<!DOCTYPE html>
<html>
  <head>
    <title>Hope</title>
    <%= favicon_link_tag('favicon.ico') %>
    
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body id="page-top">
    <div class="navbar navbar-default navbar-fixed-top" id="mainNav">
      <div class="container">
        <%= link_to "Hope", home_index_path, class: "navbar-brand" %>

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav pull-right">
            <li class="nav-item">
              <%= link_to "Home", home_index_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Messages", messages_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Access", home_access_path, class: "nav-link" %>
            </li>
            <!-- TODO: il8n化 -->
            <li class="nav-item">
              <%= link_to "日本語", home_access_path, class: "nav-link" %>
            </li>
            <% if current_admin %>
              <li class="nav-item">
                <%= link_to "Logout", destroy_admin_session_path, class: "nav-link", method: :delete %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div id="buffer"></div>

    <!-- TODO: Bootstrap -->
    <span class="notice"><%= notice %></span>
    <span class="alert"><%= alert %></span>
	 
    <%= yield %>

    <script src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js"></script>
    <script>
      // Messages#Index
      window.sr = ScrollReveal();
      sr.reveal('.video_div');
    </script>
  </body>
</html>
